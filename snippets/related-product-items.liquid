{% if recommend.products and recommend.products.size > 0 %}
  <hr class="hr--clear hr--small">
  <div class="section-header section-header--medium">
    <h3 class="section-header__title">
      {% if recommend.settings and recommend.settings.title %}
        {{ recommend.settings.title | t }}
      {% else %}
        {{ 'products.general.related_products_title' | t }}
      {% endif %}
    </h3>
  </div>
  <div class="grid-uniform grid-link__container">
    {% for product in recommend.products %}
      {% assign grid_item_width = 'small--one-half medium--one-half large--one-quarter' %}
      {% include 'product-grid-item' with 'related-products' %}
    {% endfor %}
  </div>
{% endif %}
